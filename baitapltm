#include <stdio.h>#include <stdio.h>
#include <conio.h>
#include<string.h>
#define _WINSOCK_DEPRECATED_NO_WARNINGS
#include <winsock2.h>
#include <ws2tcpip.h>
#pragma comment(lib, "ws2_32")
int main()
{
    // Khoi tao thu vien Winsock
    WSADATA wsa;
    WSAStartup(MAKEWORD(2, 2), &wsa);
    //Nhap chuoi tu ban phim
    char ten[100];
    printf("Nhap chuoi :");
    gets_s(ten);
    fflush(stdin);
    //Kiểm tra chuỗi có phải tên miền hay không?
    int a = 0;
    for (int i = 0; i < 100; i++) {
        if (((ten[i] >= 'A') && (ten[i] <= 'Z')) || ((ten[i] >= 'a') && (ten[i] <= 'z')) || (ten[i] == '_') || (ten[i] == '.'))
        {
            a = 1; 
        }
    }
    //Phân giải tên miền
    if (a == 1)
    {
        addrinfo* info;
        SOCKADDR_IN addr;
        int ret = getaddrinfo(ten, "http", NULL, &info);
        if (ret == 0)
        {
            memcpy(&addr, info->ai_addr, info->ai_addrlen);
            printf("Phan giai ten mien thanh cong\n");
            printf("Dia chi IP: %s", inet_ntoa(addr.sin_addr));
        }
        else
        {
            printf("Phan giai ten mien that bai");
        }
    }
    else if(a==0){
        printf("Chuoi da nhap khong phai ten mien");
    }
}
#define _WINSOCK_DEPRECATED_NO_WARNINGS

#include <winsock2.h>
#include <ws2tcpip.h>

#pragma comment(lib, "ws2_32")

int main()
{
    // Khoi tao thu vien Winsock
    WSADATA wsa;
    WSAStartup(MAKEWORD(2, 2), &wsa);

    char ten[100];
    printf("Nhap chuoi :");
    gets_s(ten);
    fflush(stdin);

    int a = 0;

    for (int i = 0; i < 100; i++) {
        if (((ten[i] >= 'A') && (ten[i] <= 'Z')) || ((ten[i] >= 'a') && (ten[i] <= 'z')) || (ten[i] == '_') || (ten[i] == '.'))
        {
            a = 1; 
        }
    }
    if (a == 1)
    {
        addrinfo* info;
        SOCKADDR_IN addr;

        int ret = getaddrinfo(ten, "http", NULL, &info);
        if (ret == 0)
        {
            memcpy(&addr, info->ai_addr, info->ai_addrlen);
            printf("Phan giai ten mien thanh cong\n");
            printf("Dia chi IP: %s", inet_ntoa(addr.sin_addr));
        }
        else
        {
            printf("Phan giai ten mien that bai");
        }
    }
    else if(a==0){
        printf("Chuoi da nhap khong phai ten mien");
    }
}
